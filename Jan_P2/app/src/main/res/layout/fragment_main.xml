<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jan.jan_p2.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@color/grey">

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Hello World! Dies ist eine besorgte-Bürger App, damit auch die besonders deutschen ihre geliebte deutsche Sprache erlernen können, um sie einestages korrekt zu verwenden. (Soll Heißen: Ich habe das Gefühl, dass ich bei dem 'deutchen design' etwas übertrieben habe :D)" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act_learn"
        android:drawableRight="@drawable/ic_action_go"
        android:textSize="20sp"
        android:onClick="mainLearnButton">
    </Button>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/thin_borders"
            android:padding="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="mainExpandWordfields">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expand_wordfields"
                        android:textSize="15sp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/mainactivity_expand_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/ic_action_expand" />
                </FrameLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/mainactivity_wordfields_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 1"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 2"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 3"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 4"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 5"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 6"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 7"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 8"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 9"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 10"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 11"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wortfeld 12"/>
                    <android.support.v7.widget.AppCompatSeekBar
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:max="10"
                        android:progress="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
