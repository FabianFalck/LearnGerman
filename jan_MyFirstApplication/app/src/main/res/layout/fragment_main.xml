                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:max="10"
                    android:progress="5"
                    android:id="@+id/default_wordfields_s1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
