            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_default_mode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expand_wordfields"
            android:clickable="true"
            android:onClick="expandWordfields">
