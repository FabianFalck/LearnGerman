<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" android:gravity="bottom" android:layout_marginBottom="20dp" >

    <Button
        android:id="@+id/nochNicht"
        android:text="noch nicht"
        android:background="#F44336"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/sosoLala"
        android:text="soso lala"
        android:background="#FFEB3B"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/richtig"
        android:text="richtig"
        android:background="#4CAF50"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/einfach"
        android:text="einfach"
        android:background="#03A9F4"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</LinearLayout>